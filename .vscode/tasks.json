{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/29-DivideTwoIntegers/29-DivideTwoIntegers.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/29-DivideTwoIntegers/29-DivideTwoIntegers.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/29-DivideTwoIntegers/29-DivideTwoIntegers.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
          "label": "test",
          "group": {
            "kind": "test",
            "isDefault": true
          },
          "command": "dotnet",
          "type": "shell",
          "args": [
            "watch",
            "-p",
            "${workspaceFolder}/29-DivideTwoIntegers/29-DivideTwoIntegers.csproj",
            "test",
          ],
          "problemMatcher": "$msCompile"
        }
    ]
}